<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="my-cordova-plugin"
    version="1.0.0">
    <name>ePOSPlugin/name>
    <description>pluging to use ePOS printer</description>
    <license>MIT</license>

    <js-module src="www/ePOSPugin.js" name="ePOSPrinter">
        <clobbers target="window.plugins.EPOSPrinter" />
    </js-module>

    <!-- android -->
    <platform name="android">

        <source-file src="src/android/ePOSPlugin.java" target-dir="src/epos/cordova" />
        <source-file src="src/android/lib/ePOS-Print.jar" target-dir="libs" />
        <source-file src="src/android/lib/ePOSEasySelect.jar" target-dir="libs" />
      
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="ePOSPlugin">
            <param name="android-package" value="epos.cordova.ePOSPlugin"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*" />

        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.BLUETOOTH" />
        </config-file>
      
    </platform>
</plugin>
